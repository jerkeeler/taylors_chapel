{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "experimentalDecorators": true,
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    },
    "lib": [
      "es5",
      "es2015",
      "es2017.object",
      "es2016.array.include",
      "dom",
      "scripthost"
    ]
  },
  "include": [
    "src/server/**/*",
    "src/types/**/*"
  ]
}
